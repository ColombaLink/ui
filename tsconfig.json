{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~": ["src"],
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "types": ["typePatches"]
}
